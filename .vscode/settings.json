{
    "files.exclude": {
        ".git": true,
        "node_modules": false
    },
    "search.exclude": {
        ".vscode": true,
        "node_modules": true,
        "out": true
    },
    "css.validate": true,
    "scss.validate": true,
    "eslint.enable": true,
    "typescript.disableAutomaticTypeAcquisition": true,
    "eslint.autoFixOnSave": true,
    "workbench.colorCustomizations": {
        "activityBar.background": "#6f0e7b",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#000000",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#46094d",
        "titleBar.inactiveBackground": "#46094d99",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveForeground": "#e7e7e799",
        "statusBar.background": "#46094d",
        "statusBarItem.hoverBackground": "#6f0e7b",
        "statusBar.foreground": "#e7e7e7",
        "activityBar.activeBackground": "#6f0e7b",
        "activityBar.activeBorder": "#000000",
        "statusBar.border": "#46094d",
        "titleBar.border": "#46094d"
    },
    "peacock.color": "#46094d",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}
